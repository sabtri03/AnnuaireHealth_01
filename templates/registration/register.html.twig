{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('registrationJS') }}
{% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.emailPublic) }}
        {{ form_row(registrationForm.adresseNumber) }}
        {{ form_row(registrationForm.adresseStreet) }}
        {{ form_row(registrationForm.phoneNumber) }}
        {{ form_row(registrationForm.tvaNb) }}
        {{ form_row(registrationForm.webSite) }}
        {{ form_row(registrationForm.postCode) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.services) }}

        <ul class="logos" data-prototype="{{ form_widget(registrationForm.logo.vars.prototype)|e('html_attr') }}">
                {# iterate over each existing tag and render its only field: name #}
                {% for logo in registrationForm.logo %}
                    <li>{{ form_row(logo) }}</li>
                {% endfor %}
        </ul>
        {{ form_row(registrationForm.save) }}
        <!-- <button class="btn">Register</button>  -->
    {{ form_end(registrationForm) }}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('registrationJS') }}
    {% endblock %}
{% endblock %}
